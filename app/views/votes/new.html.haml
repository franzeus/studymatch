.guessBox

    .imageWrapper
        .profileImage
            .loading
                = image_tag "loader.gif"
            = image_tag "https://graph.facebook.com/#{@vote.subject.external_id}/picture?width=250&height=200", { :class => "userImage"}

    = form_for @vote do |f|

        %ul.chooseList
            = f.collection_radio_buttons :answers, @vote.answers, :id, :title do |item|
                %li
                    = item.radio_button
                    .label
                        %i{ :class => "icon-circle-arrow-right" }
                        = item.label

        = f.hidden_field :subject_id, value: @vote.subject_id

%script{:type => "text/javascript"}
    slideImageIn();